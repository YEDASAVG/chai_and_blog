{
  "name": "lingo-monorepo",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "dev:web": "turbo run dev --filter=@lingo/web",
    "dev:api": "turbo run dev --filter=@lingo/api",
    "build": "turbo run build",
    "build:web": "turbo run build --filter=@lingo/web",
    "build:api": "turbo run build --filter=@lingo/api",
    "start": "turbo run start",
    "lint": "turbo run lint"
  },
  "devDependencies": {
    "turbo": "^2.3.0"
  },
  "packageManager": "npm@10.0.0",
  "dependencies": {
    "tslib": "^2.8.1"
  }
}
